<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrammarEditor.Views.ItemDetailPage"
             Title="{Binding Title}" BackgroundColor="Black">

    <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Label Text="Category" TextColor="White" FontSize="Large" Grid.Column="0" />
                <Entry Text="{Binding MSG_CAT}" FontSize="Large" Grid.Column="1" BackgroundColor="White" />
                <Label Text="ID" FontSize="Large" TextColor="White" Grid.Column="2" HorizontalTextAlignment="End" />
                <Label Text="{Binding MSG_ID}" FontSize="Large" Padding="10,0,0,0" TextColor="White" Grid.Column="3" LineBreakMode="TailTruncation" />
            </Grid>

            <Label Text="Message:" FontSize="Large" TextColor="White" />
            <Editor Text="{Binding MSG}" FontSize="Large" BackgroundColor="White"/>
            <Label Text="English:" FontSize="Large" TextColor="White" />
            <Editor Text="{Binding MSG_EN}" FontSize="Large" BackgroundColor="{Binding EN_STATUS}"/>
            <Label Text="Русский:" FontSize="Large" TextColor="White" />
            <Editor Text="{Binding MSG_RU}" FontSize="Large" BackgroundColor="{Binding RU_STATUS}"/>

            <Label Text="Notes" FontSize="Large" TextColor="White" />
            <Entry Text="{Binding NOTES}" FontSize="Large"/>

            <Button Margin="0,10,0,0" Text="Save Data"
                        Command="{Binding ExportToJSON}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
        </StackLayout>
    </ScrollView>
</ContentPage>